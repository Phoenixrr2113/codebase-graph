{
  "name": "@codegraph/mcp-server",
  "version": "0.1.0",
  "description": "MCP Server for CodeGraph - enables AI assistants to query code knowledge graph",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@codegraph/graph": "workspace:*",
    "@codegraph/parser": "workspace:*",
    "@codegraph/logger": "workspace:*",
    "@codegraph/types": "workspace:*",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.12.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  },
  "files": [
    "dist"
  ]
}
